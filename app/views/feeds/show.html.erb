<div class="container" id="main_layout">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <p><strong>Content:</strong><%= @feed.content %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3"><br>
      <p><strong>Image:</strong><br><%= image_tag @feed.image.url %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <p><strong>User:</strong><%= @feed.user.name %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= link_to 'Edit', edit_feed_path(@feed) %> |
      <%= link_to 'Back', feeds_path %>
    </div>
  </div>
</div>
